{% extends '@DemosPlanCore/DemosPlanCore/procedure.html.twig' %}

{% block component_part %}
    {% set submitTypeOptions = [] %}

    {% for value, label in getFormOption('statement_submit_types.values', true) %}
        {% set submitTypeOptions = submitTypeOptions|merge([{ label: label, value: value }]) %}
    {% endfor %}

    <split-statement-view
        procedure-id="{{ procedure }}"
        procedure-name="{{ procedureName }}"
        statement-extern-id="{{ statementExternId }}"
        statement-id="{{ statementId }}"
        websocket-url="{{ mercure('https://replace/with/url/to/segementation/status')|json_encode(constant('JSON_UNESCAPED_SLASHES') b-or constant('JSON_HEX_TAG'))|raw }}">
    </split-statement-view>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ webpackBundles(['procedure-administrationSplitStatement.js']) }}
{% endblock javascripts %}
