{% extends '@DemosPlanCore/DemosPlanCore/base.html.twig' %}

{% block component_part %}

    <h1>{{ "procedures.assigned"|trans }}</h1>

    {% if templateVars.allowedProcedures|default([])|length == 0 %}
        <p>{{ "procedures.assigned.none"|trans }}</p>
    {% else %}
        <table class="c-table">
            <colgroup>
                <col>
            </colgroup>
            <thead>
                <tr>
                    <th>
                        {{ "procedure.name"|trans }}
                    </th>
                </tr>
            </thead>
            <tbody>
            {% for procedure in templateVars.allowedProcedures|default([]) %}
                <tr>
                    <td class="weight--bold">
                        <a
                            href="{{ path('DemosPlan_statement_orga_list', {'procedureId': procedure.id}) }}"
                            :data-cy="`statementOrgaList:{{ loop.index }}`">
                            {{ procedure.name|default }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <hr class="u-mt-0">
    {% endif %}

{% endblock component_part %}

{% block javascripts %}
    {{ parent() }}
    {{ webpackBundles(['core-genericBundle.js']) }}
{% endblock javascripts %}
